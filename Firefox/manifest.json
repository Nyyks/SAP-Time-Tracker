{
  "manifest_version": 2,
  "name": "SAP Time Tracker",
  "version": "1.1",
  "description": "Keeps track how much time you've wasted in SAP.",
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "SAP Time Tracker"
  },
  "web_accessible_resources": ["settings.html"],
  "icons": {
  "16": "icon16.png",
  "48": "icon48.png",
  "128": "icon128.png"
  }
}
